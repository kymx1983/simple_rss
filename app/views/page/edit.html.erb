<div class="main">
  <div class="container">
    <h1>ページ編集</h1>

    <% @page.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>

    <%= form_tag("/page/update") do %>

      <input type="hidden" class="input-text" name="id" value="<%= @page.id %>"/>

      <div class="form-group">
        <h2><label>タイトル:</label></h2>
        <div class="input-content">
          <label>
            <input type="text" class="input-text" name="title" value="<%= @page.title %>"/>
          </label>
        </div>
      </div>

      <div class="form-group">
        <h2><label>URL:</label></h2>
        <div class="input-content">
          <label>
            <input type="text" class="input-text" name="url" value="<%= @page.url %>"/>
          </label>
        </div>
      </div>


      <div class="form-group">
        <h2><label>内容:</label></h2>
        <div class="input-content">
          <label>
            <textarea class="content-area" name="content" rows="3"><%= @page.url %></textarea>
          </label>
        </div>
      </div>

      <hr>
      <br>
      <input type="submit" class="btn-flat-border" value="確定">　
    <% end %>
    <br><br>
  </div>
</div>